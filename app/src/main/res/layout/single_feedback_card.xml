<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <!--Rating-->
        <TextView
            android:id="@+id/rating_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="5 stars"
            android:textColor="@color/black"
            />

        <!--Comment-->
        <TextView
            android:id="@+id/comment_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_text_view"
            android:text="Work harder. This is definitely not enough"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <!--Reviewer-->
        <TextView
            android:id="@+id/reviewer_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@+id/date_text_view"
            android:text="Feedback by: Dr. Greene"
            android:textColor="@color/black"
            />

        <!--Date-->
        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Jan 1st, 2017"
            android:textColor="@color/black"
            android:layout_below="@+id/comment_text_view"
            />


    </RelativeLayout>



</android.support.v7.widget.CardView>