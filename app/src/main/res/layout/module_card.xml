<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    android:background="@color/bg_login"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="10dp">

        <!--Code-->
        <TextView
            android:id="@+id/code_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CS1032"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <!--Name-->
        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif"
            android:text="Programmming Fundamentals"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:typeface="normal"
            tools:fontFamily="sans-serif" />

        <!--Credits-->
        <TextView
            android:id="@+id/credits_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/name_text_view"
            android:textColor="@color/black"
            android:text="Credits"
            android:textSize="20sp" />

        <!--Grade-->
        <TextView
            android:id="@+id/grade_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/name_text_view"
            android:text="Grade"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/credits_text_view"
            android:backgroundTint="@color/bg_login"
            android:text="Edit"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/credits_text_view"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/btnEdit"
            android:backgroundTint="@color/btn_logut_bg"
            android:text="Remove"
            android:textSize="20dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>